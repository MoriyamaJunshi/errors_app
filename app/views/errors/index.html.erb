<h1>エラーメッセージ一覧</h1>
<div class="wrapper">
  <div class="container flex-start">
    <div class= "col-box-1">
      <%= form_with url: search_path, local: false, method: :get do |f| %>
        <% f.text_field :word, placeholder: "キーワードを入力", class: "form-box" %>
        <%= f.submit "検索", class: "btn" %>
      <% end %>
    </div>  
  </div>
</div>
<% if @errors.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>エラータイトル</th>
        <th>エラーメッセージ</th>
      </tr>
    </thead>
    <tbody>
      <% @errors.each do |error| %>
        <tr>
          <td><%= link_to error.id, error %></td>
          <td><%= error.content%></td>
          <td><%= error.message %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>

<%= link_to 'エラーメッセージの登録', new_error_path, class: "btn btn-primary" %>